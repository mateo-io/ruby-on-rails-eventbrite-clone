<h1> Pending Invitations </h1>

<!-- DOESNT SHOW PAST INVITATIONS BUT DOESN'T DELETE THEM EITHER, GARBAGE COLLECTION? -->
<% if current_user.invited_events.future.any? %>

<% current_user.invited_events.each  do |invites|  %>

<%= render 'invitations', event: invites%>


<% end %>
<% end %>


<h1> Invitations Sent</h1>

<% if Invitation.find_by(inviter: current_user.id) %>

<% Invitation.where(inviter: current_user.id).each do |invites| %>

<% event=Event.where(id: invites.event_id).take %>
<p> 
<%= render 'invitations', event: event%>
</p>

<% end %>
<% end %>
