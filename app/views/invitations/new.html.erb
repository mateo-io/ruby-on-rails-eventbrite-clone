<h1> Invitations Sent</h1>

<% if Invitation.find_by(inviter: current_user.id) %>

<% Invitation.where(inviter: current_user.id).each do |invites| %>

<% event=Event.find_by(id: invites.event_id) %>
<% user=User.find_by(id: invites.user_id) %>
<p> 
<%= render 'invitations', user: user, event: event %>
</p>

<% end %>
<% end %>
